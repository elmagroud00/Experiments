<?xml version="1.0" encoding="utf-8"?>
<com.example.testpolytopoly.TouchFoldLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_fold_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="This is a test image"
            android:scaleType="fitXY"
            android:src="@drawable/jobs" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click Me" />
    </LinearLayout>

</com.example.testpolytopoly.TouchFoldLayout>