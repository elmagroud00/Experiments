<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TestArea"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/sizeinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/infomation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/getLocalVisibleRect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LocalVisibleRect"
                android:textSize="12sp" />

            <Button
                android:id="@+id/getGlobalVisibleRect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GlobalVisibleRect"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/getLocationOnScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LocationOnScreen"
                android:textSize="12sp" />

            <Button
                android:id="@+id/getLocationInWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LocationInWindow"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>